model Piu {
  id         String   @id @default(uuid())
  user       Users    @relation(fields: [userid], references: [id])
  userid     String   @relation()   
  texto      String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Users {
  id         String  @id @default(uuid())
  name       String  @unique
  pius       Piu[]
}